<% if @comment.parent_id.present? %>
  $('#comment-<%= @comment.id%>-inner').html("<%= escape_javascript(render 'comments/edit_form') %>");
<% else %>
  $('#feed-item-text-<%= @comment.id%>').html("<%= escape_javascript(render 'comments/edit_form') %>");
<% end %>

$("#edit_comment_<%=@comment.id%> .emoji-area").emojioneArea({
                  search: false,
                  recentEmojis: false,
                  pickerPosition: 'bottom',
                  events: {
                    keyup: function (editor, event) {
                      countChar(editor, <%= @comment.id %>);
                   }
                 }
      });
countChar( $("#edit_comment_<%=@comment.id%> .emojionearea-editor"), <%= @comment.id %> );

dragDropAttach();

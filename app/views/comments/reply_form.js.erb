<% form = escape_javascript(
            render(partial:'comments/form', 
              locals: { post: @new_comment, parent_id: @comment_id })
          ) %>

$('.feed-item .feed-form').remove();
$("[id^='comment-reply-btn']").show();

<% if Comment.find(@comment_id).parent_id.blank? %>
  $('#comment-reply-btn-<%= @comment_id %>').hide().before(`<%= form %>`);
<% else %>
  $('#comment-<%= @comment_id%>-inner').append(`<%= form %>`);
<% end %>

$("#new_comment-<%= @comment_hash %> .emoji-area").emojioneArea({
                  search: false,
                  recentEmojis: false,
                  pickerPosition: 'bottom',
                  events: {
                    keyup: function (editor, event) {
                      countChar(editor, '<%= @comment_hash %>');
                   }
                 }
      });
countChar( $("#new_comment-<%=@comment_hash%> .emojionearea-editor"), '<%= @comment_hash %>' );

dragDropAttach();

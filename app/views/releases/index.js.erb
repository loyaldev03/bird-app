$('.music-block').html(`
  <div class="row mt-3">
    <% for release in @releases %>
      <div class="col-xl-3 col-lg-4 col-md-6 mb-5">
        <%= escape_javascript render(release) %>
      </div>
    <% end %>
  </div>`);

$(".playlist-nav-body li").removeClass('active');

var filter = `
  <% if @filters && @filters[:release_type].present? %>
    <% if @filters[:release_type] == "1" %>
      exclusive
    <% elsif @filters[:release_type] == "2" %>
      select
    <% end %>
  <% elsif @filters && @filters[:liked].present? %>
    liked
  <% else %>
    all
  <% end %>`;

$('#playlist-' + filter.replace(/\s+/g, '') + '-releases').parent('li').addClass('active');

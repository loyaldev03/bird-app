<% if @user.has_role? :artist %>
  <%= render 'users/artist_header' %>
<% else %>
  <%= render 'users/user_header' %>
<% end %>

<div class="row mt-4">
  <div class="col-lg-3">
    <%= render 'player/player_page_menu' %>
  </div>

  <div class="col-lg-9 music-wrapper">
    <div class="music-block">
      <%= render partial: 'playlists/page', 
                 locals: { tracks: @playlist.tracks, source_type: 'playlist', source_id: @playlist.id } %>
    </div>

  </div>
</div>

<%= render 'player/bottom_player' %>

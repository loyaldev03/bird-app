<%= devise_error_messages! %>

<div class="form-label-group">
  <%= f.email_field :email, autofocus: true, autocomplete: "email", 
    class: 'form-control', placeholder: 'Email address', required: true %>
  <%= f.label :email %>
</div>

<div class="form-label-group">
  <%= f.text_field :first_name, autocomplete: "first name", 
    class: 'form-control', placeholder: 'First name', required: true %>
  <%= f.label :first_name %>
</div>

<div class="form-label-group">
  <%= f.text_field :last_name, autocomplete: "last name", 
    class: 'form-control', placeholder: 'Last name' %>
  <%= f.label :last_name %>
</div>
<div class="text-center mx-4">
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
</div>

<div class="form-label-group">
  <%= f.text_field :city, 
      class: 'form-control', placeholder: 'City', required: true %>
  <%= f.label :city %>
</div>

<div class="form-label-group">
  <%= f.text_field :shipping_address, 
      class: 'form-control', placeholder: 'Shipping Address', required: true %>
  <%= f.label :shipping_address %>
</div>

<div class="form-label-group">
  <%= f.text_field :birthdate, 
      data: { provide: "datepicker", "date-start-view" => 2, 
        "date-format" => "yyyy-mm-dd",'date-default-view-date' => '1998-01-01' },
      class: 'form-control', placeholder: 'Birthday', required: true %>
  <%= f.label :birthdate %>
</div>

<div class="form-group">
  <%= f.label :gender, 'Gender' %>
  <%= f.select :gender, User.genders.keys.reverse %>
</div>

<div class="form-group">
  <%= f.label :t_shirt_size %>
  <%= f.select :t_shirt_size, options_for_select(['S - Mens', 'M - Mens', 'L - Mens', 'XL - Mens', '2X - Mens', '3X - Mens', 'XS - Womens', 'S - Womens', 'M - Womens', 'L - Womens', 'XL - Womens'], (current_user.t_shirt_size if current_user)),{ include_blank: 'Shirt Size' }, required: true %>
</div>

<div class="form-label-group">
  <%= f.password_field :password, autocomplete: "off", 
      class: 'form-control', placeholder: "Password" %>
  <%= f.label :password %>
</div>

<div class="form-label-group">
  <%= f.password_field :password_confirmation, autocomplete: "off", 
      class: 'form-control', placeholder: "Password confirmation" %>
  <%= f.label :password_confirmation %>
</div>

<%= devise_error_messages! %>

<div class="form-group">
  <%= f.label :email, 'Email Address', class: 'required' %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", 
    class: 'form-control w-50', required: true %>
</div>

<div class="text-center mx-4">
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :first_name, class: "required" %>
      <%= f.text_field :first_name, autocomplete: "first name", 
        class: 'form-control', required: true %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autocomplete: "last name", 
        class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :shipping_address, class: 'required' %>
      <%= f.text_field :shipping_address, 
          class: 'form-control autocomplete', 
          required: true %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :address_city, class: 'required' %>
      <%= f.text_field :address_city, 
          class: 'form-control locality', required: true %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :address_state %>
      <%= f.text_field :address_state, 
          class: 'form-control administrative_area_level_1' %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :address_zip %>
      <%= f.text_field :address_zip, 
          class: 'form-control postal_code' %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :gender, 'Gender' %>
      <%= f.select :gender, 
          User.genders.keys.reverse, 
          {}, 
          class: "select", 'data-minimum-results-for-search' => -1, "data-width" => "100%" %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :birthdate, class: 'required' %>
      <%= f.text_field :birthdate, 
          data: { provide: "datepicker", "date-start-view" => 2, 
            "date-format" => "yyyy-mm-dd",'date-default-view-date' => '1998-01-01' },
          class: 'form-control', required: true %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :t_shirt_size, class: 'required' %>
      <%= f.select :t_shirt_size, options_for_select(['S - Mens', 'M - Mens', 'L - Mens', 'XL - Mens', '2X - Mens', '3X - Mens', 'XS - Womens', 'S - Womens', 'M - Womens', 'L - Womens', 'XL - Womens'], (current_user.t_shirt_size if current_user)),{ include_blank: 'Shirt Size' }, 
          required: true,
          class: "select", 'data-minimum-results-for-search' => -1, "data-width" => "100%" %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <label>&nbsp;</label>  
      <button class="c-btn-red btn-wide" style="border-radius: 0; height: 39px; display: block;">NEXT: MEMERSHIP LEVEL </button>
    </div>
  </div>

  <% unless current_user && current_user.provider.present? %>
    <div class="col-lg-4">
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", 
            class: 'form-control' %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", 
            class: 'form-control' %>
      </div>
    </div>
  <% end %>
</div>



<% if @user.has_role? :artist %>
  <%= render 'users/artist_header' %>
<% else %>
  <%= render 'users/user_header' %>
<% end %>

<div class="row mt-4">
  <div class="col-lg-3">
    <%= render 'player/player_page_menu' %>
  </div>

  <div class="col-lg-9">
    <div class="music-block">
      <div class="row mt-3">
        <% for release in @releases %>
          <div class="col-xl-3 col-lg-4 col-md-6 mb-5">
            <%= render(release) %>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <% if @limit <= @releases.count %>
          <% if params[:filters].present? %>
            <% _params = { filters: params[:filters].permit! }.merge(page: params[:page] ? params[:page].to_i + 1 : 2) %>
          <% else %>
            <% _params = {page: params[:page] ? params[:page].to_i + 1 : 2} %>
          <% end %>
          <%= link_to "Show more", load_more_releases_path(_params), 
              remote: true, class: "btn c-btn-blue show-more" %>
        <% end %>
      </div>
    </div>

    <%= render 'player/bottom_player' %>
  </div>
</div>

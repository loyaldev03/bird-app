<% form = escape_javascript(
            render(partial:'topics/form', 
              locals: { post: @new_post, topic_id: @topic_id, parent_id: @post_id })
          ) %>

$('.feed-item .feed-form').remove();
$("[id^='topic-post']").show();

<% if Post.find(@post_id).parent_id.blank? %>
  $('#topic-post-<%= @post_id %>').hide().before(`<%= form %>`);
<% else %>
  if($('#feed-post-<%= @post_id %>').siblings('.nested-messages').length == 0){
    $('#feed-post-<%= @post_id %>').closest('div').append(`<%= form %>`);
  } else {
    $('#feed-post-<%= @post_id %>').siblings('.nested-messages').before(`<%= form %>`);
  }
<% end %>

$("#new_post-<%=@post_hash%> .emoji-area").emojioneArea({search: false, recentEmojis: false});

dragDropAttach();

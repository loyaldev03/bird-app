<p class="feed-posted"> 
  <%= time_ago_in_words(activity['time'].in_time_zone) %> ago.
</p>

<%= link_to activity['actor'], class: "#{avatar_style(activity['actor'])} sm-style" do %>
  <%= image_tag activity['actor'].avatar.thumb.url, class: "feed-avatar" %>
  <%= activity['actor'].name %>
<% end %>

<%= activity['foreign_id'].class.to_s %>
<strong>
  <%= activity['foreign_id'].try(:title) %>
</strong>

<%= activity['object'].class.to_s %>
<strong>
  <%= link_to activity['object'].try(:title), activity['object'] %>
</strong>

<hr class="feed-divider">
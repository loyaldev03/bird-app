<div class="modal modal-blured rate-track-modal" data-track-id="<%= track.id %>" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-dialog-centered modal-dialog-wide" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">Ã—</span>
				</button>
			</div>
			<div class="modal-body w-100">
				<h5 class="modal-title">RATE THIS TRACK</h5>
				<%= rating_for( track, "main", star: 4, cancel: true, disable_after_rate: false, star_path: "/images/rate/egg-stars") %>
				<div class="rate-track-detail">
					<%= link_to image_tag(image, style: "width: 28px; height: 28px; border-radius: 2px; margin: 0 5px 0 10px;"), release, :class => 'track-image' %>			
					<div class="track-title jp-title-info" aria-label="title">
						<%= "%02i" % track.track_number %>
						<%= "#{track.title} - #{track.artists}" %>
					</div>
				</div>            
				<input type="submit" name="Submit" value="Submit" class="btn c-btn-blue btn-wide mt-2 rating-submit">
				<a href="#" _target="blank" class="ratings-helper">How do ratings work?</a>
			</div>
		</div>
	</div>
</div>
    star: 4, 
    cancel: false, 
    disable_after_rate: true, 
    star_on: image_path('rate/egg/star-on.png'), 
    star_half: image_path('rate/egg/star-on.png'), 
    star_off: image_path('rate/egg/star-off.png') %>

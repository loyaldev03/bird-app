<%= form_tag report_path, remote: true, class: "w-100" do %>
  <%= label_tag "text-#{object.id}", "Text", class: "sr-only" %>
  <%= text_area_tag "text-#{object.id}", nil, class: "form-control mb-1" %>
  <%= hidden_field_tag "type-#{object.id}", object.class.to_s %>
  <%= hidden_field_tag "id-#{object.id}", object.id %>
  <%= submit_tag "Report", class: "btn c-btn-blue" %>
<% end %>

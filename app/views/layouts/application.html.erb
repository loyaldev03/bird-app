<!DOCTYPE html>
<html>
  <head>
    <title>Streambird</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
    <script src="https://cdn.jsdelivr.net/autocomplete.js/0/autocomplete.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/2.0.5/wavesurfer.min.js"></script>
    

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-114231380-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-114231380-1');
    </script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main-container">

      <div class="notice"><%= notice %></div>
      <div class="alert"><%= alert %></div>

      <%= render "layouts/header" %>
      <main role="main">
        <% if controller?('home') && action?('index') %>
          <%= render 'layouts/carousel' %>
        <% end %>

        <div class="container py-4">
          <%= yield %>
        </div>

        <%= render "layouts/footer" %>

      </main>
    </div>

    <%= yield :body_area %>
  </body>
</html>

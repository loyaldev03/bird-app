<div class="feed-item">
  <p class="feed-posted"> 
    <%= time_ago_in_words(activity['updated_at'].in_time_zone) %> ago
  </p>
  
  <div class="t-wide">
    
    <%= link_to activity['activities'][0]['actor'] do %>
      <%= image_tag activity['activities'][0]['actor'].avatar.thumb.url, class: "feed-avatar" %>
      <strong><%= activity['activities'][0]['actor'].name %>:</strong>
    <% end %>

    <% for _activity in activity['activities'] %>
      <% case _activity['foreign_id'].class.to_s %>
      <% when "Like" %>
        <%= "Has Liked a post" %>
      <% when "Post" %> 
        <%= "Has Commented a post" %>
      <% else %> 
        <%= _activity['foreign_id'].class.to_s %>
      <% end %>

      <strong>
        <%= link_to _activity['object'] do %>
          <% if _activity['object'].class.to_s == "Post" %>

            <% if _activity['object'].text.present? %>
              <%= _activity['object'].text.truncate(20) %>
            <% else %>
              a Picture
            <% end %>

          <% else %>
            <%= _activity['object'] %>
          <% end %>
        <% end %>
      </strong>
    <% end %>
  </div>

  <hr class="feed-divider">

</div>
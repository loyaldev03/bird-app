<% actors = activity['activities'].map { |a| a['actor'] }.uniq %>

<% if activity['actor_count'] == 1 %>
  <%= link_to activity['activities'][0]['actor'] do %>
    <%= image_tag activity['activities'][0]['actor'].avatar.thumb.url, class: "feed-avatar" %>
    <%= activity['activities'][0]['actor'].name %>
  <% end %>

  followed you
<% elsif activity['actor_count'] == 2 %>
  <%= link_to actors[0] do %>
    <%= image_tag actors[0].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[0].name %>
  <% end %>

  and

  <%= link_to actors[1] do %>
    <%= image_tag actors[1].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[1].name %>
  <% end %>

  followed you
<% else %>
  <%= link_to actors[0] do %>
    <%= image_tag actors[0].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[0].name %>
  <% end %>

  ,

  <%= link_to actors[1] do %>
    <%= image_tag actors[1].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[1].name %>
  <% end %>
 
  and 
  <%= activity['actor_count'] - 2 %> 
  more followed you 
<% end %>

<%= time_ago_in_words(activity['updated_at'].in_time_zone) %> ago

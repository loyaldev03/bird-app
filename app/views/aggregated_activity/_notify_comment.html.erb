<% actors = activity['activities'].map { |a| a['actor'] }.uniq %>

<% if activity['actor_count'] == 1 %>
  <%= link_to activity['activities'][0]['actor'] do %>
    <%= image_tag activity['activities'][0]['actor'].avatar.thumb.url, class: "feed-avatar" %>
    <%= activity['activities'][0]['actor'].name %>
  <% end %>

  added
  <%= pluralize(activity['activity_count'], 'comment') %>

  <% for comment in activity['activities'] %>
    <% if comment['object'].try(:body) %>
      <%= link_to comment['object'].body.truncate(10), comment['object'] %>
    <% else %>
      <%= link_to comment['object'].try(:text).try(:truncate, 10), comment['object'] %>
    <% end %>
  <% end %>
<% elsif activity['actor_count'] == 2 %>

  <%= link_to actors[0] do %>
    <%= image_tag actors[0].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[0].name %>
  <% end %>

  and

  <%= link_to actors[1] do %>
    <%= image_tag actors[1].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[1].name %>
  <% end %>

  added
  <%= activity['activity_count'] %>
  comments

  <% for comment in activity['activities'] %>
    <% if comment['object'].try(:body) %>
      <%= link_to comment['object'].body.truncate(10), comment['object'] %>
    <% else %>
      <%= link_to comment['object'].try(:text).try(:truncate, 10), comment['object'] %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to actors[0] do %>
    <%= image_tag actors[0].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[0].name %>
  <% end %>

  ,

  <%= link_to actors[1] do %>
    <%= image_tag actors[1].avatar.thumb.url, class: "feed-avatar" %>
    <%= actors[1].name %>
  <% end %>

  and 
  <%= activity['actor_count'] - 2 %> 
  more added 
  <%= activity['activity_count'] %> 
  comments

  <% for comment in activity['activities'] %>
    <%= link_to comment['object'].try(:body).try(:truncate, 10), comment['object'] %>
  <% end %>
<% end %>

<%= time_ago_in_words(activity['updated_at'].in_time_zone) %> ago

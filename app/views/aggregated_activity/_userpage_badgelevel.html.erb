<div class="feed-item">
  <p class="feed-posted"> 
    <%= time_ago_in_words(activity['updated_at'].in_time_zone) %> ago
  </p>

  <div class="t-wide">
    <%= link_to activity['activities'][0]['actor'] do %>
      <%= image_tag activity['activities'][0]['actor'].avatar.thumb.url, class: "feed-avatar" %>
      <strong><%= activity['activities'][0]['actor'].name %>:</strong>
    <% end %>

    Has achieved the badge

    <strong>
      <%= activity['activities'][0]['object'].name %>
    </strong>


  </div>

    <div class="item-wide feed-release">

      <%= link_to image_tag(activity['activities'][0]['object'].image.thumb), 
            activity['activities'][0]['actor'], class: "item-avatar" %>

      <div class="item-body">
        <h3>
          <%= link_to activity['activities'][0]['object'].name.truncate(70).upcase, 
                activity['activities'][0]['actor'] %>
        </h3>

        <p><strong>Type:</strong> <%= activity['activities'][0]['object'].badge_kind.name %></p>

        <p class="item-text">
          <%= strip_tags(activity['activities'][0]['object'].message).truncate(220) %>
        </p>

      </div>
    </div>


    
  <hr class="feed-divider">
</div>